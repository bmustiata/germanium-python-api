{
  "germanium" : {
    "version": "1.10.4",
    "files": {
      "README.md": "^(germanium )(.*?)$",
      "README.rst": "^(germanium )(.*?)$",
      "setup.py": "version='##VERSION##',",
      "doc/usage/index.adoc": "^(= Germanium v)(.*?)$",
      "germanium/version.py": "current = \"##VERSION##\""
    }
  },

  "germaniumdrivers": {
    "version": "$(cat ../germaniumdrivers/setup.py  | grep version | cut -f2 -d\\')",
    "files": {
      "setup.py": "'germaniumdrivers==##VERSION##',",
      "requirements.txt": "^(germaniumdrivers==)(.*?)$"
    }
  }
}
